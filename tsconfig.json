{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    // "types": ["reflect-metadata"],
    "outDir": "publish/dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "baseUrl": ".",
    // "checkJs": false,
    // "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    // "tests/*.ts",
    // "tests/api_tests/*.ts",
    "src/*.ts",
    "src/types/*.ts",
    "src/indexes/*.ts"
  ],
  // "include": ["src/index.ts"],
  "exclude": [
    "node_modules",
    "publish",
    "spec",
    "src/template_class.ts",
    "src/template_functional.ts",
    "tests",
    "tests_local"
  ],
}