{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["es2016"],
    // "types": ["reflect-metadata"],
    "outDir": "publish/dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveSymlinks": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/*.ts",
    "src/types/adapter_local.ts",
    "src/types/general.ts",
    "src/indexes/indexAdapterAmazonS3.ts",
    "src/indexes/indexAdapterAzureBlob.ts",
    "src/indexes/indexAdapterBackblazeB2.ts",
    "src/indexes/indexAdapterGoogleCloud.ts",
    "src/indexes/indexAdapterLocal.ts",
    "src/indexes/indexAdapterMinio.ts",
    "src/indexes/indexStorage.ts"
  ],
  // "include": ["src/index.ts"],
  "exclude": [
    "node_modules",
    "tests",
    "tests_local",
    "spec",
    "dist",
    "src/template_class.ts",
    "src/template_functional.ts"
  ]
}
